<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	<filter>
		<filter-name>MyFilter</filter-name>
		<filter-class>fun.filter.MyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MyFilter</filter-name>
		<url-pattern>/userinfo.jsp</url-pattern>
	</filter-mapping>
		<filter-mapping>
		<filter-name>MyFilter</filter-name>
		<url-pattern>/detail.jsp</url-pattern>
	</filter-mapping>
	<servlet>
		<description></description>
		<display-name></display-name>
		<servlet-name>LoginAction</servlet-name>
		<servlet-class>fun.login.LoginAction</servlet-class>
	</servlet>
	<servlet>
		<display-name></display-name>
		<servlet-name>DetailAction</servlet-name>
		<servlet-class>fun.detail.DetailAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginAction</servlet-name>
		<url-pattern>/Servlet/Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DetailAction</servlet-name>
		<url-pattern>/Servlet/Detail</url-pattern>
	</servlet-mapping>

</web-app>